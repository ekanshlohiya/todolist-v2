    <%- include("header") -%>

    
    <div class="box" id="heading">
        <h1><%= typeOfDay %></h1> 
    </div>
    <div class="box">

        <% for(var i=0; i<newListItems.length ; i++) { %>
        <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="checked" value="<%= newListItems[i]._id %>" onchange="this.form.submit()">
                <p><%= newListItems[i].name %></p>
            </div>
        </form>
        
        <% } %>

        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="Add a task" autocomplete="off">
            <button type="submit" name="button">+</button>
        </form>

    </div>
    
    <%- include("footer") -%>
    